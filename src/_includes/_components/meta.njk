{# SEO #}
<meta
	name="description"
	content="{% if description %}{{ description }}{% else %}{{ settings.description }}{% endif %}"
/>

{# General SEO #}
{% if canonical %}
	<link rel="canonical" href="{{ settings.url }}/{{ canonical }}" />
{% endif %}

{# Favicon #}
<link rel="shortcut icon" href="/favicon.ico" />
<link rel="apple-touch-icon" href="{{ author.avatar }}" />
<meta name="theme-color" content="{{ settings.theme_color }}" />
<meta name="apple-mobile-web-app-status-bar" content="{{ settings.theme_color }}" />

{# JSON LD #}
<script type="application/ld+json">
	{
		"name": "{{ author.name }}",
		"description": "{{ settings.description }}",
		"author": {
			"@type": "Person",
			"name": "{{ author.name }}"
		},
		"@type": "WebSite",
		"url": "{{ settings.url }}",
		"image": "{{ settings.url }}{{ author.avatar }}",
		"headline": "{{ settings.title }}",
		"@context": "http://schema.org"
	}
</script>
